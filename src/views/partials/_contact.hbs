<section class="contact py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 m-auto text-center pb-3">
        <h2>Kontakt</h2>
      </div>
    </div>
    <div class="row py-3 mx-auto text-center">
      <div class="col-lg-5 p-3">
        <div class="row">
          <div class="mx-auto">
            <h4 id="withTitle">{{title}}</h4>
            <h5><small>adres:</small> Olchowa 999, 39-127 Olchowa</h5>
            <div>
            </div>
            <h5><small>telefon:</small> +48 999 999 999, +48 14 999 99 99</h5>
            <div>
            </div>
            <h5><small>email:</small> itspa@itspa.pl</h5>
          </div>
        </div>
      </div>
      <div class="col-lg-5 mx-auto text-center">

        <form method="POST" action="/partials/_foot">
          <div class="row">
            <div class="col-lg-6 py-2">
              <input
                type="text"
                class="form-control bg-light"
                placeholder="Imię"
                value="{{{name}}}"
              />
            </div>
            <div class="col-lg-6 py-2">
              <input
                type="text"
                class="form-control bg-light"
                placeholder="Nazwisko"
                value="{{{surname}}}"
              />
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12 py-2">
              <textarea
                name=""
                class="form-control bg-light"
                id="message"
                cols="10"
                rows="5"
                placeholder="Treść wiadomości..."
              > {{{message}}}</textarea>
            </div>
          </div>
          <button class="btn1">Wyślij wiadomość!</button>
        </form>
      </div>
    </div>
  </div>
</section>